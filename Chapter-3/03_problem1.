#include <stdio.h>
int main()
{
	printf("Welcome! In the section of Number Finder specially greatest.\n");
	printf("============================================================\n");

	char f;
	int a, b, c, d;
	printf("Enter the First Number:");
	scanf("%d", &a);

	printf("Enter the Second Number:");
	scanf("%d", &b);

	printf("Enter the Third Number:");
	scanf("%d", &c);

	printf("Enter the Fourth Number:");
	scanf("%d", &d);

	if (a > b && a > b && a > d)
	{
		printf("The Greatest Number from above list is %d\n", a);
	}

	else if (b > a && b > c && a > d)
	{
		printf("The Greatest Number from above list is %d\n", b);
	}

	else if (c > a && b > c && a > d)
	{
		printf("The Greatest Number from above list is %d\n", c);
	}

	else if (d > a && d > b && d > c)
	{
		printf("The Greatest Number from above list is %d\n", d);
	}

	else
	{
		printf("From above list all numbers are equal.\n");
	}

	printf("•••••••••••••••••••••••••••••••••••••••••••••••••••\n");

	printf("Did I help you? Please give feedback:");
	scanf("%s", &f);

	printf("Thank You!");

	return 0;
}